{
	"name": "text-replace",
	"version": "1.0.4",
	"description": "npm-package allowing you to find and replace variables to some values",
	"main": "./dist/text-replace.js",
	"types": "./dist/types/index.d.ts",
	"readme": "./readme/en/README.en.md",
	"repository": "https://github.com/ThatsEmbarrassing/text-replace",
	"files": [
		"dist",
		"types"
	],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js",
			"types": "./dist/types/index.d.ts",
			"default": "./dist/index.js"
		},
		"./errors": {
			"import": "./dist/errors/errors.js",
			"require": "./dist/errors/errors.js",
			"types": "./dist/types/errors/CustomErrors/index.d.ts",
			"default": "./dist/errors/errors.js"
		},
		"./error-handlers": {
			"import": "./dist/errors/handlers.js",
			"require": "./dist/errors/handlers.js",
			"types": "./dist/types/errors/ErrorHandlers/index.d.ts",
			"default": "./dist/errors/handlers.js"
		}
	},
	"scripts": {
		"build": "vite build",
		"lint:ts": "eslint ./**/*.ts",
		"lint:ts:fix": "eslint ./**/*.ts --fix",
		"test": "jest --config './config/jest/jest.config.ts'"
	},
	"keywords": ["text templates", "text", "text replace", "template"],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.20.12",
		"@babel/preset-env": "^7.20.2",
		"@babel/preset-typescript": "^7.18.6",
		"@types/jest": "^29.4.0",
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.49.0",
		"@typescript-eslint/parser": "^5.49.0",
		"babel-eslint": "^10.1.0",
		"eslint-import-resolver-typescript": "^3.5.3",
		"eslint-plugin-import": "^2.27.5",
		"jest": "^29.4.1",
		"prettier": "^2.8.3",
		"terser": "^5.16.6",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5",
		"vite": "^4.1.4",
		"vite-plugin-dts": "^2.1.0"
	}
}
