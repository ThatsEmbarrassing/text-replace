{
	"name": "text-replace",
	"version": "1.2.0",
	"description": "npm-package allowing you to find and replace variables to some values",
	"main": "./dist/es/index.mjs",
	"type": "commonjs",
	"readme": "./readme/en/README.en.md",
	"repository": "https://github.com/ThatsEmbarrassing/text-replace",
	"files": [
		"dist"
	],
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/es/index.mjs",
			"require": "./dist/cjs/index.js",
			"types": "./dist/types/index.d.ts",
			"default": "./dist/es/index.mjs"
		},
		"./errors": {
			"import": "./dist/es/errors.mjs",
			"require": "./dist/cjs/errors.js",
			"types": "./dist/types/errors.d.ts",
			"default": "./dist/es/errors.mjs"
		},
		"./error-handlers": {
			"import": "./dist/es/error-handlers.mjs",
			"require": "./dist/cjs/error-handlers.js",
			"types": "./dist/types/error-handlers.d.ts",
			"default": "./dist/es/error-handlers.mjs"
		}
	},
	"typesVersions": {
		"*": {
			".": [
				"./dist/types/index.d.ts"
			],
			"errors": [
				"./dist/types/errors.d.ts"
			],
			"error-handlers": [
				"./dist/types/error-handlers.d.ts"
			]
		}
	},
	"scripts": {
		"build": "vite build",
		"lint:ts": "eslint ./**/*.ts",
		"lint:ts:fix": "eslint ./**/*.ts --fix",
		"test": "jest --config './config/jest/jest.config.ts'",
		"prepare": "is-ci || husky install ./config/husky",
		"postinstall": "husky install",
		"prepack": "pinst --disable",
		"postpack": "pinst --enable"
	},
	"keywords": [
		"text templates",
		"text",
		"text replace",
		"template"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.20.12",
		"@babel/preset-env": "^7.20.2",
		"@babel/preset-typescript": "^7.18.6",
		"@types/jest": "^29.4.0",
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.49.0",
		"@typescript-eslint/parser": "^5.49.0",
		"babel-eslint": "^10.1.0",
		"eslint-import-resolver-typescript": "^3.5.3",
		"eslint-plugin-import": "^2.27.5",
		"husky": "^8.0.3",
		"is-ci": "^3.0.1",
		"jest": "^29.4.1",
		"lint-staged": "^13.2.0",
		"prettier": "^2.8.3",
		"terser": "^5.16.6",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5",
		"vite": "^4.1.4",
		"vite-plugin-dts": "^2.1.0"
	}
}
