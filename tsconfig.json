{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "ES5",
		"allowJs": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationDir": "./dist/types",
		"declarationMap": true,
		"outDir": "./dist",
		"skipDefaultLibCheck": true,
		"strictNullChecks": true,
		"downlevelIteration": true,
		"types": ["jest", "node"],
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@errors/custom": ["./src/errors/CustomErrors"],
			"@errors/handlers": ["./src/errors/ErrorHandlers"]
		}
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": ["src/**/*", "tests"],
	"exclude": ["node_modules/"]
}
